<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.ui.matriz.fin.ActualizarFinActivity">

    <TextView
        android:id="@+id/tv_nivel_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nivel FIN"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_nivel_mir_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nivel"
        app:boxBackgroundMode="outline"
        android:paddingTop="20dp"
        android:enabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_resumen_narrativo_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Resumen narrativo"
        app:boxBackgroundMode="outline"
        android:paddingTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_supuestos_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Supuestos"
        app:boxBackgroundMode="outline"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_actualizar_nivel_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_gravity="center"/>

</LinearLayout>